<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension
	     point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="Echo.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="Echo.commands.category"
            id="Echo.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="Echo.commands.sampleCommand"
            class="echo.handlers.SampleHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="Echo.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="Echo.menus.sampleMenu">
            <command
                  commandId="Echo.commands.sampleCommand"
                  mnemonic="S"
                  id="Echo.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="Echo.toolbars.sampleToolbar">
            <command
                  commandId="Echo.commands.sampleCommand"
                  icon="icons/Lure.png"
                  tooltip="Fix My Bug!"
                  id="Echo.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
   <extension point="org.eclipse.ui.views">
      <view
      		name="Bug Fixes"
            class="echo.FixMyBugView"
            id="BugFixerView"
            icon="icons/Lure.png"
            >
      </view>
</extension>

</plugin>
